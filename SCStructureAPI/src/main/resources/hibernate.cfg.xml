<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        
        <!--<property name="hibernate.connection.url">jdbc:hsqldb:mem:plugins/SettlerCraft/settlercraft</property>--> 
        <!--<property name="connection.url">jdbc:hsqldb:file:plugins/SCStructureAPI/DataBase/Data/settlerdb;shutdown=true;hsqldb.write_delay=false;</property>-->
		<property name="connection.url">jdbc:hsqldb:hsql://localhost:9001/StructureAPI;</property>
        
		

		
		
        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

    </session-factory>
</hibernate-configuration>