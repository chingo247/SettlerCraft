<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:sqlite:plugins/SettlerCraft/settlercraft.db</property>
        <property name="hibernate.connection.username">root</property>
        <property name="dialect">com.applerao.hibernatesqlite.dialect.SQLiteDialect</property>
        <property name="show_sql">true</property>
        <!--Drop and recreate database-->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!--<mapping class="com.cc.plugin.settlercraftmodel.model.Structure"/>-->

    </session-factory>
</hibernate-configuration>